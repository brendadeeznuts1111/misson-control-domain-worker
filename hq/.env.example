# Ghost Recon Environment Variables
# Copy to .env and fill in values, then encrypt with SOPS

# PagerDuty Configuration
PAGERDUTY_INTEGRATION_KEY=your-integration-key-here
PAGERDUTY_SERVICE_ID=your-service-id-here

# Ghost Recon Secrets
GHOST_SIGNATURE=generate-with-openssl-rand-hex-32
GHOST_PUBLIC_KEY=generate-with-openssl-rand-hex-16
JWT_SECRET=generate-with-openssl-rand-hex-32
API_KEY_SECRET=generate-with-openssl-rand-hex-32

# Deployment Configuration
DEPLOYMENT_ID=prod-v1
REGION_ID=us-east-1
CANARY_PERCENT=0

# External Services
BIGQUERY_PROJECT_ID=your-project-id
BIGQUERY_DATASET_ID=audit_logs
S3_BUCKET_NAME=mission-control-audit-logs
S3_REGION=us-east-1